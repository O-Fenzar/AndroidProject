<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_texte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.MainActivity"
    android:background="@drawable/team_background_phone">


    <TextView
        android:id="@+id/name_txt"
        android:layout_width="211dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="408dp"
        android:text="@string/name_text_description"
        android:textAlignment="viewStart"
        android:textColor="#F8F4F4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_detail"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/full_name_txt"
        android:layout_width="244dp"
        android:layout_height="45dp"
        android:layout_marginBottom="48dp"
        android:text="@string/full_name_text_description"
        android:textAlignment="center"
        android:textColor="#F8F4F4"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/team_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/abbreviation_txt"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:text="@string/abbreviation_text_description"
        android:textAlignment="center"
        android:textColor="#F8F4F4"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/team_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/full_name_txt"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/city_txt"
        android:layout_width="211dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/city_text_description"
        android:textColor="#F8F4F4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_txt" />

    <TextView
        android:id="@+id/conference_txt"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:text="@string/conference_text_description"
        android:textColor="#F8F4F4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_txt" />

    <TextView
        android:id="@+id/division_txt"
        android:layout_width="186dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:text="@string/division_text_description"
        android:textColor="#F8F4F4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conference_txt" />

    <TextView
        android:id="@+id/height_feet"
        android:layout_width="210dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:text="@string/height_feet_text_description"
        android:textColor="#F8F4F4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position_detail" />

    <TextView
        android:id="@+id/height_inches"
        android:layout_width="210dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:text="@string/height_inches_text_description"
        android:textColor="#F8F4F4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height_feet" />

    <TextView
        android:id="@+id/weight_pounds"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:text="@string/weight_pounds_text_description"
        android:textColor="#F8F4F4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height_inches"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/player_detail"
        android:layout_width="213dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:text="@string/player_detail_text_description"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#F8F4F4"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/division_txt" />

    <TextView
        android:id="@+id/team_detail"
        android:layout_width="210dp"
        android:layout_height="34dp"
        android:layout_marginTop="136dp"
        android:text="@string/team_detail_text_description"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/position_detail"
        android:layout_width="210dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:text="@string/position_text_description"
        android:textAlignment="viewStart"
        android:textColor="#F8F4F4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_detail" />


</androidx.constraintlayout.widget.ConstraintLayout>